modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Tamil TTS App"

[[workflows.workflow]]
name = "Tamil TTS App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add gtts && streamlit run app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39327
externalPort = 3000

[[ports]]
localPort = 45303
externalPort = 3001

[agent]
integrations = ["python_openai:1.0.0"]
